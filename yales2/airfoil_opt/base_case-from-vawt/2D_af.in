# Main parameters =========================
# run
SOLVER_NAME = '2D_af'
SOLVER_TYPE = INCOMPRESSIBLE
NDIM = 2
CFL = 0.9
FOURIER = 0.15
MOMENTUM_SOURCE_NUMBER = 1.0
TIME_MAX = 10.0
DUMP_TIME_PERIOD = 0.5
ITER_INFO_PERIOD = 5
PRINT_FLOW_RATES = TRUE

# schemes
TIME_INT = TFV4A
SPACE_INT = 4TH
IMPLICIT_DIFFUSION = TRUE

# Timers
TIMER_DISPLAY_THRESHOLD = 0.01   # minimum value for timer display
TIMER_DISPLAY_LEVEL = 1          # minimum level for timer display

# debug
DEBUG_LEVEL_MASTER = 3
DEBUG_LEVEL_SLAVE = 1
DEBUG_WAIT = 0

# Grid partitioning
NELEMENTPERGROUP = 500

# parameters
TURBULENCE_MODEL = DYNAMIC_SMAGORINSKY
KINEMATIC_VISCOSITY = 1.517E-5
POISSON_SOLVER = DPCG
PRESSURE_CONVERGENCE = 1.E-6
DENSITY = 1000.0

# stats
STATS U
STATS VELOCITY_SOURCE
RESET_ALL_STATS = TRUE

# sponge layer
SPONGE_LAYER_THICKNESS = 10
SPONGE_LAYER_FACTOR = 30.0

SCALAR VORTICITY TYPE = POSTPROC
SCALAR VORTICITY POSTPROC_TYPE = VORTICITY
SCALAR VORTICITY SOURCE = U

SCALAR Q_CRITERION TYPE = POSTPROC
SCALAR Q_CRITERION POSTPROC_TYPE = Q_CRITERION
SCALAR Q_CRITERION UPDATE_ONLY_AT_DUMP = TRUE
SCALAR Q_CRITERION UPDATE_ONLY_AT_POSTPROC_DUMP = TRUE

# Restart =================================
RESTART_TYPE = GMSH
RESTART_GMSH_FILE = '2D_af.msh22'
RESTART_GMSH_SCALING = 1.0          # default value

# boundaries ==============================
BOUNDARY x0 DESCRIPTION = 'Channel inlet'
BOUNDARY x0 TYPE = INLET
BOUNDARY x0 U = 5.0 0.0

BOUNDARY x1 DESCRIPTION = 'Channel outlet'
BOUNDARY x1 TYPE = OUTLET

BOUNDARY y0 DESCRIPTION = 'Lower wall'
BOUNDARY y0 TYPE = SLIP_WALL

BOUNDARY y1 DESCRIPTION = 'Upper wall'
BOUNDARY y1 TYPE = SLIP_WALL

BOUNDARY af DESCRIPTION = 'Airfoil wall'
BOUNDARY af TYPE = WALL

# Dump ====================================
DUMP_TYPE = HDF
DUMP_NPART = 1
DUMP_PREFIX = 'dump/2D_af.sol'
DUMP_INITIAL_SOLUTION = TRUE
